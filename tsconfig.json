{
   "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "target": "es6",
      "outDir": "dist",
      "baseUrl": "src",
      "sourceMap": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop" : true,
   },
   "include": [
      "src/**/*.ts", "./src/**/*.d.ts"
   ],
   "exclude": ["node_modules"]
}